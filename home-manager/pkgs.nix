let
  dev-tools = with pkgs; [
    cargo-asm
    cargo-binutils
    cargo-bloat
    cargo-edit
    cargo-espmonitor
    cargo-expand
    cargo-outdated
    cargo-udeps
    cargo-update
    gcc
    git-crypt
    gnumake
    rust-script
    rustup
    unstable.espup
    ventoy-full
    wireshark
  ];
  cli-tools = with pkgs; [
    bat
    dig
    dust
    ede1998-utilities
    exif
    unstable.fclones
    fd
    file
    htop
    inxi
    jq
    jqp
    nix-tree
    p7zip
    pciutils
    pinentry
    poppler_utils
    psmisc
    ripgrep
    tldr
    traceroute
    tree
    unstable.ocrmypdf
    unstable.rip2
    unzip
    viu
    xmlstarlet
    xsv
    yq
    zip
  ];
in
{
  home.packages =
    dev-tools
    ++ cli-tools
    ++ (with pkgs; [
      blender
      cura5
      element-desktop
      gimp
      hunspell
      hunspellDicts.de_DE
      hunspellDicts.en_US
      inkscape
      kdePackages.filelight
      kdePackages.kcalc
      kdePackages.kdepim-addons
      kdePackages.krdc
      kdePackages.krfb
      libreoffice-fresh
      pdfarranger
      pdfpc
      texliveFull
      typst
      ungoogled-chromium
      unstable.fluffychat
      (unstable.identity.overrideAttrs (super: self: { meta.priority = 1; })) # fix collision with mesa-demos
      vlc
      wl-clipboard-rs
    ]);
}
